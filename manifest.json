{
    "manifest_version": 2,
    "name": "Thrifty Cart",
    "version": "1.0",
    "description": "this extension tracks your overall spending.",
    "icons":{
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "16": "images/icon16.png"
    },
    "browser_action":{
        "default_icon": "images/icon16.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",

   
    "content_security_policy": "script-src 'self' https://canvasjs.com/assets/script/canvasjs.min.js;  object-src 'self'",
 
    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
}